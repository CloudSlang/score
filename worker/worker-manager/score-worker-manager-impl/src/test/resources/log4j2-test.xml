<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%t] %d %p [%C{1}] - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="io.cloudslang.worker.execution" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Root level="ERROR">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>